{% extends "layout.jinja" %}

{% block title %}Posts{% endblock %}

{% block content %}
{% for post in posts %}
<article class="post">
    <header>
        <div class="info">
            <h2>{{ post["title"] }}</h2>
            <div>
                by <span class="username">{{ post["username"] }}</span>
                on <span class="created">{{ post["created_at"].strftime('%Y-%m-%d') }}</span>
            </div>
        </div>
        {% if post["author_id"] == g.user["id"] %}
        <a href="{{ url_for('blog.update', id=post['id']) }}">Edit</a>
        {% endif %}
    </header>
    <pre>{{ post["body"] }}</pre>
</article>
{% endfor %}
{% endblock %}
