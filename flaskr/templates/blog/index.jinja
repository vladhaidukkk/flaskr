{% extends "layout.jinja" %}

{% block title %}Posts{% endblock %}

{% block content %}
{% for post in posts %}
<article class="post">
    <header>
        <h2>{{ post["title"] }}</h2>
        <div class="details">
            by <span class="username">{{ post["username"] }}</span>
            on <span class="created">{{ post["created_at"].strftime('%Y-%m-%d') }}</span>
        </div>
    </header>
    <pre>{{ post["body"] }}</pre>
</article>
{% endfor %}
{% endblock %}
